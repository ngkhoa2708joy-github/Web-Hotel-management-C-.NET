@model IEnumerable<WebAppHotelManagement.ViewModel.RoomBookingViewModel>

<table class="table table-bordered table-responsive table-hover" style="width:110% ">
    <thead style="background-color: #337ab7">
        <tr>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Booking From
            </th>
            <th>
                Booking To
            </th>
            <th>
                Room
            </th>
            <th>
                Number Of Members
            </th>
            <th>
                Number Of Days
            </th>
            <th>
                Room Price
            </th>
            <th>
                Total Amount
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CustomerName
                </td>

                <td>
                    @item.CustomerAddress
                </td>

                <td>
                    @item.CustomerPhone
                </td>

                <td>
                    @item.BookingFrom.ToString("dd-MMM-yyyy")
                </td>

                <td>
                    @item.BookingTo.ToString("dd-MMM-yyyy")
                </td>

                <td>
                    @item.RoomNumber
                </td>

                <td>
                    @item.NoOfMembers Person
                </td>

                <td>
                    @item.NumberOfDays Days
                </td>

                <td>
                    @item.RoomPrice.ToString("#,##0.00") $
                </td>

                <td>
                    @item.TotalAmount.ToString("#,##0.00") $
                </td>


            </tr>
        }
    </tbody>

</table>
