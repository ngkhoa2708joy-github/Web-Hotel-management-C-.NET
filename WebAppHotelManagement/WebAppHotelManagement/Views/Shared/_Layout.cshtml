<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hotel Management</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>




                @Html.ActionLink("Hotel Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                @if (Session["UserId"] != null)
                {


                    if (Session["UserName"].ToString().Equals("admin"))
                    {
                        
                        <h4 style="color:lightblue; font-size:large; margin-bottom:10px">Welcome @Session["Username"].ToString()</h4>
                        
                    }

                    else
                    {
                        <h4 style="color:lightblue; font-size:large; margin-bottom:10px">Welcome Staff @Session["Username"].ToString()</h4>
                    }
                }


            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Service", "Index", "Service")</li>

                    <li>@Html.ActionLink("Room", "Index", "Room")</li>
                    <li>@Html.ActionLink("Invoice", "Index", "Invoice")</li>

                    <li>@Html.ActionLink("Booking", "Index", "Booking")</li>
                    @if (Session["UserId"] != null || Session["UserName"] != null)
                    {


                        if (Session["UserName"].Equals("admin"))
                        {
                            <li>@Html.ActionLink("Account", "Index", "Account")</li>

                        }

                    }
                    @if (Session["UserId"] != null || Session["UserName"] != null)
                    {
                        <li>@Html.ActionLink("Log out", "LogOff", "Account")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hotel Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>
